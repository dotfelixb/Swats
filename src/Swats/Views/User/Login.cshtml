@model LoginCommand

@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}

<div id="main-swap" style="width: 560px;">
  <section class="flex w-full font-bold text-2xl pb-5">
    <div class="flex w-1/2">Login</div>
    <div class="flex w-1/2 justify-end">
      @* <div class="">
        <vc:button label="Login" buttontype="primary"></vc:button>
        </div> *@
    </div>
  </section>

  <div class="w-full bg-white rounded drop-shadow-sm px-14 py-10">
    @* email *@
    <form action="">
      <div class="w-full">
        <label for="username" class="block text-gray-600 text-xs py-3">
          Email address
        </label>
        <input type="text" name="username" placeholder="you@@email.com"
          class="block w-full rounded border-gray-300 focus:border-indigo-300 focus:ring-indigo-300;" />
      </div>

      @* email *@
      <div class="w-full">
        <label for="username" class="block text-gray-600 text-xs py-3">
          Password
        </label>
        <input type="password" name="password"
          class="block w-full rounded border-gray-300 focus:border-indigo-300 focus:ring-indigo-300;" />
      </div>

      @* button *@
      <div class="w-full pt-5 pb-3">
        <button
          class="w-full text-sm rounded px-3 py-2 focus:outline-none cursor-pointer drop-shadow-md bg-indigo-500 text-white hover:bg-indigo-600 focus:ring-indigo-800">Login</button>
      </div>

      <div class="w-full text-right">
        <a href="/user/forgotpassword" class="hover:underline">
          <span class="text-xs text-indigo-500 font-semibold">Forgot Password?</span></a>
      </div>
    </form>
  </div>


</div>