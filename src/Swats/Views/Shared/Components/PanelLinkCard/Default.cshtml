@model PanelLink

<div class="w-full flex flex-col justify-center items-center min-w-fit bg-white drop-shadow-lg rounded px-3 py-10">
    <a href="@Model.Location">
        <div class="relative flex justify-center items-center border-solid border-4 border-indigo-200 rounded-full w-16 h-16">
            <span class="text-lg font-bold text-center text-indigo-500 mt-2">
                <ion-icon style="font-size: 28px" name="@Model.IconName"></ion-icon>
            </span>
        </div>
    </a>
    <div class="flex justify-center items-center pt-5">
        <span class="text-xs text-center">@Model.Title</span>
    </div>
</div>