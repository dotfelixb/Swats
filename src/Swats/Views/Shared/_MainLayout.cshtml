<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
</head>

<body style="background-color: #f9f8f8;" class="box-border font-sans w-full flex text-sm h-screen overflow-y-hidden">
    @*sidebar*@
    <div style="width: 68px" class="flex-initial bg-white drop-shadow-lg ">
        <div class="p-4" style="height: 48px;">
            <span></span>
        </div>
        @await Html.PartialAsync("_Nav")
    </div>

    @*main*@
    <div class="flex-auto w-full">
        @*header*@
        <header style="height: 48px;" class="bg-white px-3 py-3 drop-shadow-md">
        </header>

        <main class="relative w-full flex-auto px-3 md:px-16 lg:px-36 py-12 h-screen overflow-y-auto">
            @RenderBody()
        </main>
    </div>

    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <style>
        ion-icon {
            font-size: 20px;
        }
    </style>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/datalist-polyfill.min.js"></script>
    <script src="https://unpkg.com/htmx.org@1.7.0"
        integrity="sha384-EzBXYPt0/T6gxNp0nuPtLkmRpmDBbjg6WmCUZRLXBBwYYmwAUxzlSGej0ARHX0Bo"
        crossorigin="anonymous"></script>
    <script src="https://unpkg.com/hyperscript.org@0.9.5"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
