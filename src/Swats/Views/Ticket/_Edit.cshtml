@model FetchTicket

@{
    var name = $"{Model.Code} - {Model.Subject}";
    var requesterName = Guid.TryParse(Model.Requester, out var rst) ? Model.RequesterName : Model.Requester;
}

<div id="main-swap">
    <section>
        @await Component.InvokeAsync("Breadcrumbs", new
        {
            crumbs = new[]
            {
                new SelectListItem {Text = "Home", Value = "/"},
                new SelectListItem {Text = "Ticket", Value = "/ticket"}
            },
            currentPage = Model.Code
        })
    </section>
    <section class="flex w-full font-bold text-2xl pb-5">
        <div class="flex w-1/2">@name</div>
        <div class="flex w-1/2 justify-end">
            <div class="">
                @* <button class="btn-primary"
                      hx-get="/admin/tickettype/create" hx-trigger="click" hx-target="#main-swap" hx-swap="outerHTML"
                      hx-push-url="true">
                      New Ticket Type
                    </button> *@
            </div>
        </div>
    </section>

    <div class="w-full flex flex-row">
        <div style="width: 220px" class="">
            <div class=" pr-2">
                <img class="bg-gray-200 rounded-lg" src="data:image/png;base64, @Model.ImageCode" alt="@Model.Subject"/>
            </div>
            <ul class="edit-sidebar py-5">
                <li>
                    <div class="">Created By</div>
                    <div class="">@Model.CreatedByName</div>
                </li>
                <li>
                    <div>
                        <div>Created At</div>
                        <div>@Model.CreatedAt.ToString("MMM dd, yyyy")</div>
                    </div>
                </li>
                <li>
                    <div>
                        <div>Updated By</div>
                        <div>@Model.UpdatedByName</div>
                    </div>
                </li>
                <li>
                    <div>
                        <div>Updated At</div>
                        <div>@Model.UpdatedAt.ToString("MMM dd, yyyy")</div>
                    </div>
                </li>
            </ul>
        </div>
        <div class="w-full bg-white drop-shadow-lg rounded px-10 py-10">

            <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                @* name *@
                <div class="form-control">
                    <label asp-for="@requesterName" class="form-label">
                        Requester
                    </label>
                    <input asp-for="@requesterName" class="form-input"/>
                </div>

                <div class="form-control">
                    <label asp-for="@Model.Subject" class="form-label">
                        Subject
                    </label>
                    <input asp-for="@Model.Subject" class="form-input"/>
                </div>

                <div class="form-control">
                    <label asp-for="@Model.AssignedToName" class="form-label">
                        Assigned To
                    </label>
                    <input asp-for="@Model.AssignedToName" class="form-input"/>
                </div>

                <div class="form-control">
                    <label asp-for="@Model.Source" class="form-label">
                        Source
                    </label>
                    <input asp-for="@Model.Source" class="form-input"/>
                </div>

                <div class="form-control">
                    <label asp-for="@Model.Priority" class="form-label">
                        Priority
                    </label>
                    <input asp-for="@Model.Priority" class="form-input"/>
                </div>

                <div class="form-control">
                    <label asp-for="@Model.Status" class="form-label">
                        Status
                    </label>
                    <input asp-for="@Model.Status" class="form-input"/>
                </div>

                <div class="form-control">
                    <label asp-for="@Model.DepartmentName" class="form-label">
                        Department
                    </label>
                    <input asp-for="@Model.DepartmentName" class="form-input"/>
                </div>

                <div class="form-control">
                    <label asp-for="@Model.TeamName" class="form-label">
                        Team
                    </label>
                    <input asp-for="@Model.TeamName" class="form-input"/>
                </div>

                <div class="form-control">
                    <label asp-for="@Model.TicketTypeName" class="form-label">
                        Default Ticket Type
                    </label>
                    <input asp-for="@Model.TicketTypeName" class="form-input"/>
                </div>

                <div class="form-control">
                    <label asp-for="@Model.HelpTopicName" class="form-label">
                        Help Topic
                    </label>
                    <input asp-for="@Model.HelpTopicName" class="form-input"/>
                </div>

            </div>

            <div class="grid grid-cols-1 gap-5 py-4">
                @* description *@
                <div class="form-control">
                    <label asp-for="@Model.Body" class="form-label">
                        Description
                    </label>
                    <textarea asp-for="@Model.Body" class="form-input" cols="30" rows="10"></textarea>
                </div>
            </div>
        </div>
    </div>
</div>