@model CreateTicketCommand

@{

}

<div id="main-swap">
    <form asp-controller="Ticket" asp-action="Create" method="post">
        <section class=" flex w-full font-bold text-2xl pb-5">
            <div class="flex w-1/2">New Ticket</div>
            <div class="flex w-1/2 justify-end">
                <div class="flex flex-row">
                    <button class="btn-default"
                        hx-post="/ticket" hx-trigger="click" hx-target="#main-swap" hx-swap="outerHTML"
                        hx-push-url="true">
                        <div class="flex flex-row ">
                            <div class="flex "> </div> 
                            <div class="flex">Cancel</div>
                       </div>
                    </button> 
                    <span class="mr-4"></span>
                     <button class="btn-primary"
                        hx-post="/ticket/create" hx-trigger="click" hx-target="#main-swap" hx-swap="outerHTML"
                        hx-push-url="true">
                       <div class="flex flex-row ">
                            <div class="mr-2 flex items-center "> 
                                <ion-icon name="save-outline" style="font-size: 16px;"></ion-icon>
                                </div> 
                            <div class="flex">Save</div>
                       </div>
                    </button>
                </div>
            </div>
        </section>

        <div class="w-full bg-white drop-shadow-lg rounded px-10 py-10">

            <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                @* requester *@
                <div class="form-control">
                    <label asp-for="@Model.Requester" class="form-label">
                        Requester
                    </label>
                    <input asp-for="@Model.Requester" class="form-input" />
                    <span asp-validation-for="@Model.Requester" class="form-input-error"></span>
                </div>

                @* subject *@
                <div class="form-control">
                    <label asp-for="@Model.Subject" class="form-label">
                        Subject
                    </label>
                    <input asp-for="@Model.Subject" class="form-input" />
                    <span asp-validation-for="@Model.Subject" class="form-input-error"></span>
                </div>

                @* assignee *@
                <div class="form-control">
                    <label asp-for="@Model.Assignee" class="form-label">
                        Assigned To
                    </label>
                    <input asp-for="@Model.Assignee" class="form-input" />
                    <span asp-validation-for="@Model.Assignee" class="form-input-error"></span>
                </div>

                @* source *@
                <div class="form-control">
                    <label asp-for="@Model.Source" class="form-label">
                        Source
                    </label>
                    <select asp-for="@Model.Source" class="form-input" asp-items="@Html.GetEnumSelectList<TicketSource>()">
                        <option value=""></option>
                    </select>
                    <span asp-validation-for="@Model.Source" class="form-input-error"></span>
                </div>

                @* type *@
                <div class="form-control">
                    <label asp-for="@Model.Type" class="form-label">
                        Type
                    </label>
                    <input asp-for="@Model.Type" class="form-input" />
                    <span asp-validation-for="@Model.Type" class="form-input-error"></span>
                </div>

                @* department *@
                <div class="form-control">
                    <label asp-for="@Model.Department" class="form-label">
                        Department
                    </label>
                    <input asp-for="@Model.Department" class="form-input" />
                    <span asp-validation-for="@Model.Department" class="form-input-error"></span>
                </div>

                @* help topic *@
                <div class="form-control">
                    <label asp-for="@Model.HelpTopic" class="form-label">
                        Help Topic
                    </label>
                    <input asp-for="@Model.HelpTopic" class="form-input" />
                    <span asp-validation-for="@Model.HelpTopic" class="form-input-error"></span>
                </div>

            </div>
            <div class="grid grid-cols-1 gap-5 py-4">
                @* body *@
                <div class="form-control">
                    <label asp-for="@Model.Body" class="form-label">
                        Description
                    </label>
                    <textarea asp-for="@Model.Body" class="form-input" cols="30" rows="10"></textarea>
                    <span asp-validation-for="@Model.Body" class="form-input-error"></span>

                </div>
            </div>
        </div>
    </form>
</div>