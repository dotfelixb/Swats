@model StatsCard

<div hx-get="@Model.Location"
     hx-trigger="load delay:30s"
     hx-swap="outerHTML">
     <div class="w-full flex flex-col justify-center items-center min-w-fit bg-white drop-shadow-lg rounded px-5 py-10">
        <div class="relative flex justify-center items-center border-solid border-4 border-indigo-200 rounded-full w-16 h-16">
            <span class="text-lg font-bold text-center text-indigo-500">@Model.Count</span>
            <div class="absolute top-0 right-0 w-4 h-4 rounded-full border-solid border-indigo-400 border-4 bg-indigo-700"></div>
        </div>
        <div class="flex justify-center items-center pt-5">
            <span class="text-xs text-center">@Model.Title</span>
        </div>
    </div>
</div>