@model IEnumerable<RecentTicket>

<div class="w-full bg-white drop-shadow-lg rounded">

    @* header *@
    <div class="w-full flex flex-row px-5 py-3">
        <div class="w-1/2"></div>
        <div class="w-1/2 flex justify-end ">
            <ion-icon name="refresh-circle-outline"></ion-icon>
        </div>
    </div>

    @* content *@
    <div class="px-5 pb-5">
        <table class="w-full table-auto">
            <thead>

            </thead>
            <tbody>
            @foreach (var recent in Model)
            {
                <tr class="">
                    <td class="py-3 text-sm">
                        <span>@recent.Title</span>
                        <span class="mr-2"></span>
                        @foreach (var tag in recent.Tags)
                        {
                            <span style="font-size: 8px;" class="rounded bg-indigo-500 text-white px-2 py-1 m-1">@tag</span>
                        }
                    </td>
                    <td class="py-3 text-sm text-right">@recent.CreatedAt.ToString("MMM dd, HH:mm")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>

</div>